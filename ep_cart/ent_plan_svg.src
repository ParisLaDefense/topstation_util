rout,DefAttr
/* Définition des variables qui porteront les valeurs des attributs */
{
  Dtcc=[[Ma]&Q0:dtc]
  Dtci=[[Ma]&Q0:id]
  
  /* Récupération de l'index de nature de l'information (0=calculé, 1=digitalisé, etc...) */
  var,§nati
  §nati=[[Ma]&Q0:in]
  if,"lwc(§nati)==`c%`"
  {
        Nati=0
  }
  else
  {
        if,"lwc(§nati)==`d%`"
        {
          Nati=1
        }
        else
        {
          if,"lwc(§nati)==`i%`"
          {
                Nati=2
          }
          else
          {
                Nati=3
          }
        }
  }
  Iref=[[Ma]&Q0:ir]
  Eddv=[[Ma]&R0:E]
  
  /* Récupération de l'index de commune et désignation des communes par un string de la forme xxyy... avec :    */
  /*                            - xx = 2 derniers caractères de l'identifiant INSEE de la commune x             */
  /*                            - yy = 2 derniers caractères de l'identifiant INSEE de la commune y, etc...     */
  var,§com
  §com=[[Ma]&T0:commune]
  Comm=
  if,"§com><``"
  {
    if,"§com=1"
    {
          Comm=26
    }
    if,"§com=2"
    {
          Comm=35
    }
    if,"§com=3"
    {
          Comm=2635
    }
    if,"§com=4"
    {
          Comm=50
    }
    if,"§com=5"
    {
          Comm=2650
    }  
    if,"§com=6"
    {
          Comm=3550
    }
    if,"§com=7"
    {
          Comm=263550
    }
    if,"§com=8"
    {
          Comm=62
    }
    if,"§com==`9`"
    {
          Comm=2662
    }
    if,"§com=10"
    {
          Comm=3562
    }
    if,"§com=11"
    {
          Comm=263562
    }
    if,"§com=12"
    {
          Comm=5062
    }
    if,"§com=13"
    {
          Comm=265062
    }
    if,"§com=14"
    {
          Comm=355062
    }
    if,"§com=15"
    {
          Comm=26355062
    }
  }
  /*------------------------------------------------------ */
  
  /* Récupération de l'index de zone (0=quartier d'affaires, etc...) */
  var,§zone
  §zone=[[Ma]&T0:zone]
  Zone=[§zone]
  
  Txt1=[[Ma]&T1:texte1]
  Titr=[[Ma]&T2:titre]
  Stit=[[Ma]&T3:soustitre]
  Txt2=[[Ma]&T4:texte2]
  Txt3=[[Ma]&T9:texte3]
  Doss=[[Ma]&T10:dossier]
  NoPc=[[Ma]&T10:nopiece]
  Dtcp=[[Ma]&T5:date]
  Indp=[[Ma]&T6:indice]
  Numo=[[Ma]&T6:nordre]
  Alti=[[Ma]&T7:alti]
  Etud=[[Ma]&T7:etude]
  Prov=[[Ma]&T7:prov]
  Loca=[[Ma]&T8:point]
}

rout,MajCom
/* Cochage des cases de communes à partir de la valeur de la procédure Comm */
{
  var,§i,§com,§a
  §i=0
  §a={Comm}
  §com=[xtr(`[§a]`,`[§i]`,2)]
  whil,"§com><``"
  {
        qmod,id=OC_C0[§com],et=1
        §i=[[§i+2]]
        §com=[xtr(`[§a]`,`[§i]`,2)]
  }
}

